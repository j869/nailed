<%- include('partials/header') %>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-undo"></i> Import Revert Scripts</h2>
        <a href="/admin/customers/import" class="btn btn-secondary">
          <i class="fas fa-arrow-left"></i> Back to Import
        </a>
      </div>

      <% if (revertFiles.length === 0) { %>
        <div class="alert alert-info">
          <i class="fas fa-info-circle"></i> No revert scripts found. Import operations will create revert scripts that appear here.
        </div>
      <% } else { %>
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0">Available Revert Scripts</h5>
          </div>
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-striped mb-0">
                <thead class="table-dark">
                  <tr>
                    <th>Filename</th>
                    <th>Created</th>
                    <th>Size</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% revertFiles.forEach(file => { %>
                    <tr>
                      <td>
                        <code><%= file.filename %></code>
                      </td>
                      <td>
                        <span class="text-muted">
                          <%= file.created.toLocaleString() %>
                        </span>
                      </td>
                      <td>
                        <span class="badge bg-secondary">
                          <%= (file.size / 1024).toFixed(1) %> KB
                        </span>
                      </td>
                      <td>
                        <div class="btn-group btn-group-sm">
                          <a href="<%= file.path %>" class="btn btn-outline-primary">
                            <i class="fas fa-eye"></i> Preview
                          </a>
                        </div>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <% } %>

      <div class="mt-4">
        <div class="alert alert-warning">
          <h6><i class="fas fa-exclamation-triangle"></i> Important Notes:</h6>
          <ul class="mb-0">
            <li><strong>Review before executing:</strong> Always preview revert scripts before execution</li>
            <li><strong>Data conflicts:</strong> Revert operations may fail if data has been modified since import</li>
            <li><strong>Cascade order:</strong> Scripts automatically handle proper deletion order (workflows â†’ customers)</li>
            <li><strong>One-time use:</strong> Executed scripts are archived and cannot be run again</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
