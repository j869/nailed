            if (confirm(`Are you sure you want to delete template "${template.name}"? This action cannot be undone.`)) {
                try {
                    const response = await fetch(`/api/rule-templates/${templateId}`, {
                        method: 'DELETE'
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        logActivity(`Template "${template.name}" deleted successfully`, 'success');
                        await refreshTemplates();
                    } else {
                        logActivity(`Error deleting template: ${result.error}`, 'error');
                    }
                } catch (error) {
                    logActivity(`Error deleting template: ${error.message}`, 'error');
                }
            }
        }

        async function loadTemplateIntoVisualBuilder(templateId) {
            const template = window.allTemplates?.find(t => t.id === templateId);
            if (!template) return;

            // Switch to visual builder
            const visualBuilderTab = document.querySelector('[data-bs-target="#visual-builder"]');
            if (visualBuilderTab) {
                visualBuilderTab.click();
                setTimeout(() => {
                    loadTemplateIntoBuilder(template);
                    logActivity(`Template "${template.name}" loaded into Visual Builder`, 'success');
                }, 100);
            }
        }

        async function exportSingleTemplate(templateId) {
            const template = window.allTemplates?.find(t => t.id === templateId);
            if (!template) return;

            // Safe JSON parsing for export
            let templateJsonData;
            try {
                templateJsonData = typeof template.template_json === 'string' 
                    ? JSON.parse(template.template_json) 
                    : template.template_json;
            } catch (parseError) {
                logActivity(`Warning: Exporting template with invalid JSON "${template.name}": ${parseError.message}`, 'warning');
                templateJsonData = {
                    error: "Invalid JSON structure",
                    raw_data: template.template_json
                };
            }

            const exportData = {
                name: template.name,
                description: template.description,
                category: template.category,
                template_json: templateJsonData,
                tags: template.tags || []
            };

            const blob = new Blob([JSON.stringify(exportData, null, 2)], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `rule-template-${template.name.replace(/[^a-z0-9]/gi, '_').toLowerCase()}.json`;
            a.click();
            URL.revokeObjectURL(url);

            logActivity(`Template "${template.name}" exported`, 'success');
        }

        async function exportAllTemplates() {
            try {
                const response = await fetch('/api/rule-templates');
                const result = await response.json();

                if (result.success) {
                    const exportData = {
                        export_date: new Date().toISOString(),
                        templates: result.data.map(template => {
                            // Safe JSON parsing for bulk export
                            let templateJsonData;
                            try {
                                templateJsonData = typeof template.template_json === 'string' 
                                    ? JSON.parse(template.template_json) 
                                    : template.template_json;
                            } catch (parseError) {
                                logActivity(`Warning: Template "${template.name}" has invalid JSON, including as raw data`, 'warning');
                                templateJsonData = {
                                    error: "Invalid JSON structure",
                                    raw_data: template.template_json
                                };
                            }
                            
                            return {
                                name: template.name,
                                description: template.description,
                                category: template.category,
                                template_json: templateJsonData,
                                tags: template.tags || []
                            };
                        })
                    };

                    const blob = new Blob([JSON.stringify(exportData, null, 2)], { type: 'application/json' });
                    const url = URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = `all-rule-templates-${new Date().toISOString().split('T')[0]}.json`;
                    a.click();
                    URL.revokeObjectURL(url);

                    logActivity(`All ${result.data.length} templates exported`, 'success');
                } else {
                    logActivity(`Error exporting templates: ${result.error}`, 'error');
                }
            } catch (error) {
                logActivity(`Error exporting templates: ${error.message}`, 'error');
            }
        }

        function importTemplates() {
            // Create file input
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = '.json';
            input.onchange = async function(e) {
                const file = e.target.files[0];
                if (!file) return;

                try {
                    const text = await file.text();
                    const importData = JSON.parse(text);
                    
                    const templates = importData.templates || [importData]; // Support both bulk and single imports
                    let successCount = 0;
                    let errorCount = 0;

                    for (const templateData of templates) {
                        try {
                            const response = await fetch('/api/rule-templates', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify(templateData)
                            });

                            const result = await response.json();
                            if (result.success) {
                                successCount++;
                            } else {
                                errorCount++;
                                logActivity(`Error importing "${templateData.name}": ${result.error}`, 'error');
                            }
                        } catch (error) {
                            errorCount++;
                            logActivity(`Error importing "${templateData.name}": ${error.message}`, 'error');
                        }
                    }

                    logActivity(`Import complete: ${successCount} success, ${errorCount} errors`, successCount > 0 ? 'success' : 'error');
                    
                    if (successCount > 0) {
                        await refreshTemplates();
                    }
                } catch (error) {
                    logActivity(`Error parsing import file: ${error.message}`, 'error');
                }
            };
            input.click();
        }

        async function validateAllTemplates() {
            if (!window.allTemplates) return;

            logActivity('Validating all templates...', 'info');
            let validCount = 0;
            let invalidCount = 0;

            for (const template of window.allTemplates) {
                try {
                    // Safe JSON parsing for validation
                    let templateData;
                    try {
                        templateData = typeof template.template_json === 'string' 
                            ? JSON.parse(template.template_json) 
                            : template.template_json;
                    } catch (parseError) {
                        invalidCount++;
                        logActivity(`Template "${template.name}" has invalid JSON: ${parseError.message}`, 'error');
                        continue;
                    }
                    
                    // Basic validation
                    if (templateData.trigger && (templateData.conditions || templateData.validations || templateData.actions)) {
                        validCount++;
                    } else {
                        invalidCount++;
                        logActivity(`Template "${template.name}" has invalid structure`, 'warning');
                    }
                } catch (error) {
                    invalidCount++;
                    logActivity(`Template "${template.name}" validation error: ${error.message}`, 'error');
                }
            }

            logActivity(`Validation complete: ${validCount} valid, ${invalidCount} invalid templates`, invalidCount === 0 ? 'success' : 'warning');
        }

        async function cleanupUnusedTemplates() {
            if (!window.allTemplates) return;

            const unusedTemplates = window.allTemplates.filter(t => (t.usage_count || 0) === 0 && !t.is_active);
            
            if (unusedTemplates.length === 0) {
                logActivity('No unused templates found for cleanup', 'info');
                return;
            }

            if (confirm(`Found ${unusedTemplates.length} unused templates. Delete them all?`)) {
                let deletedCount = 0;
                
                for (const template of unusedTemplates) {
                    try {
                        const response = await fetch(`/api/rule-templates/${template.id}`, {
                            method: 'DELETE'
                        });
                        
                        const result = await response.json();
                        if (result.success) {
                            deletedCount++;
                        }
                    } catch (error) {
                        logActivity(`Error deleting template "${template.name}": ${error.message}`, 'error');
                    }
                }

                logActivity(`Cleanup complete: ${deletedCount} templates deleted`, 'success');
                await refreshTemplates();
            }
        }
    </script>
