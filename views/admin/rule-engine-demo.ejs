                                    }
                                };
                                if (selectedJobInput.dataset.templateId) {
                                    action.jobIdentifier.templateId = selectedJobInput.dataset.templateId;
                                }
                                if (selectedJobInput.dataset.stepId) {
                                    action.jobIdentifier.stepId = selectedJobInput.dataset.stepId;
                                }
