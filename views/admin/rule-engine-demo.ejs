                </div>
            `;
            
            log.innerHTML = entry + log.innerHTML;
            
            // Keep only last 15 entries (increased from 10 for better debugging)
            const entries = log.children;
            while (entries.length > 15) {
                log.removeChild(entries[entries.length - 1]);
