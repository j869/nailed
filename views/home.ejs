            groupedData[key] = [];
          }
          groupedData[key].push(item);
        });
        
        // Sort groups by age (older first) - extract number from "X weeks" format
        let sortedGroups = Object.keys(groupedData).sort((a, b) => {
          let aWeeks = a.includes('weeks') ? parseInt(a.split(' ')[0]) : (a.includes('week') ? 1 : -1);
          let bWeeks = b.includes('weeks') ? parseInt(b.split(' ')[0]) : (b.includes('week') ? 1 : -1);
          return bWeeks - aWeeks; // Descending order (older first)
        });
