<%- include('partials/header', { user: locals.user }) %>
<%- include('partials/expandableMenu') %>

<!-- Full-width overlay container -->
<div style="position: relative; width: 100vw; left: 50%; margin-left: -50vw; margin-top: 80px;">
    
    <!-- Header section with contained width -->
    <div class="jumbotron text-center">
        <div class="container">
            <h1 class="display-3">Management Report</h1>
            <p class="lead">Customer overview and status</p>
            
            <br><hr><br>
            
            <!-- Summary Cards -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <h4><%= customers.length %></h4>
                            <p>Total Customers</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <h4><%= activeCount %></h4>
                            <p>Active Jobs</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <h4><%= completedCount %></h4>
                            <p>Completed Jobs</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Full-width table section -->
    <div style="width: 100%; padding: 0 15px; box-sizing: border-box;">
        <div class="table-responsive" style="overflow-x: auto;">
            <table class="table table-striped table-hover" style="min-width: 1200px; width: 100%;">
                <thead class="table-dark">
                    <tr>
                        <th style="min-width: 60px;">Edit</th>
                        <th style="min-width: 200px;">Customer Info</th>
                        <th style="min-width: 160px;">Project Info</th>
                        <th style="min-width: 180px;">Action Status</th>
                        <th style="min-width: 160px;">Last Payment</th>
                        <th style="min-width: 100px;">Collected</th>
                        <th style="min-width: 110px;">Date Ordered</th>
                        <th style="min-width: 140px;">Project Dates</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (customers && customers.length > 0) { %>
                        <% customers.forEach(customer => { %>
                            <tr>
                                <td>
                                    <form method="post" action="/updateCustomer/<%= customer.id %>" style="display: inline;">
                                        <button class="btn btn-sm btn-outline-secondary" type="submit" name="action" value="view" title="Edit Customer">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                    </form>
                                </td>
                                <td>
                                    <div>
                                        <strong><%= customer.full_name %></strong>
                                        <% if (customer.job_no) { %>
                                            <br><small class="text-muted">Job #<%= customer.job_no %></small>
                                        <% } %>
                                        <% if (customer.primary_phone) { %>
                                            <br><small class="text-muted"><%= customer.primary_phone %></small>
                                        <% } %>
                                    </div>
                                </td>
                                <td>
                                    <% if (customer.site_location || customer.slab_size || customer.building_type) { %>
                                        <div>
                                            <% if (customer.site_location) { %>
                                                <small class="text-muted"><strong>Site:</strong> <%= customer.site_location %></small>
                                            <% } %>
                                            <% if (customer.building_type) { %>
                                                <% if (customer.site_location) { %><br><% } %>
                                                <small class="text-info"><strong>Type:</strong> <%= customer.building_type %></small>
                                            <% } %>
                                            <% if (customer.slab_size) { %>
                                                <% if (customer.site_location || customer.building_type) { %><br><% } %>
                                                <small class="text-secondary"><strong>Size:</strong> <%= customer.slab_size %></small>
                                            <% } %>
                                        </div>
                                    <% } else { %>
                                        -
                                    <% } %>
                                </td>
                                <td>
                                    <div>
                                        <span class="badge badge-light text-dark border">
                                            <%= customer.current_status || 'Unknown' %>
                                        </span>
                                        <% if (customer.next_action_description) { %>
                                            <br><small class="text-primary"><strong>Next:</strong> <%= customer.next_action_description %></small>
                                        <% } %>
                                        <% if (customer.date_last_actioned) { %>
                                            <br><small class="text-muted"><strong>Last:</strong> <%= customer.date_last_actioned %></small>
                                        <% } %>
                                    </div>
                                </td>
                                <td>
                                    <% if (customer.last_payment_date || customer.last_payment_amount) { %>
                                        <div>
                                            <% if (customer.last_payment_amount) { %>
                                                <strong>$<%= parseFloat(customer.last_payment_amount).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></strong>
                                            <% } %>
                                            <% if (customer.last_payment_date) { %>
                                                <br><small class="text-muted"><%= customer.last_payment_date %></small>
                                            <% } %>
                                            <% if (customer.last_payment_description) { %>
                                                <br><small class="text-muted"><%= customer.last_payment_description %></small>
                                            <% } %>
                                        </div>
                                    <% } else { %>
                                        -
                                    <% } %>
                                </td>
                                <td>
                                    <% if (customer.invoices_collected) { %>
                                        $<%= parseFloat(customer.invoices_collected).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                                    <% } else { %>
                                        -
                                    <% } %>
                                </td>
                                <td>
                                    <%= customer.date_ordered || '-' %>
                                </td>
                                <td>
                                    <% if (customer.date_bp_applied || customer.date_bp_issued || customer.date_completed) { %>
                                        <div>
                                            <% if (customer.date_bp_applied) { %>
                                                <small class="text-muted"><strong>BP Applied:</strong> <%= customer.date_bp_applied %></small>
                                            <% } %>
                                            <% if (customer.date_bp_issued) { %>
                                                <% if (customer.date_bp_applied) { %><br><% } %>
                                                <small class="text-success"><strong>BP Issued:</strong> <%= customer.date_bp_issued %></small>
                                            <% } %>
                                            <% if (customer.date_completed) { %>
                                                <% if (customer.date_bp_applied || customer.date_bp_issued) { %><br><% } %>
                                                <small class="text-primary"><strong>Completed:</strong> <%= customer.date_completed %></small>
                                            <% } %>
                                        </div>
                                    <% } else { %>
                                        -
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="8" class="text-center">No customers found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
    
</div>
<!-- End full-width overlay -->

<%- include('partials/footer') %>
