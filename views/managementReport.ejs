<%- include('partials/header') %>

<div class="jumbotron text-center">
    <div class="container">
        <h1 class="display-3">Management Report</h1>
        <p class="lead">Customer overview and status</p>
        
        <br><hr><br>
        
        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <h4><%= customers.length %></h4>
                        <p>Total Customers</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h4><%= activeCount %></h4>
                        <p>Active Jobs</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <h4><%= completedCount %></h4>
                        <p>Completed Jobs</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Customer Report Table -->
        <div class="table-responsive" style="overflow-x: auto;">
            <table class="table table-striped table-hover" style="min-width: 1200px;">
                <thead class="table-dark">
                    <tr>
                        <th style="min-width: 60px;">Edit</th>
                        <th style="min-width: 80px;">Job#</th>
                        <th style="min-width: 150px;">Customer</th>
                        <th style="min-width: 100px;">Status</th>
                        <th style="min-width: 120px;">Next Action</th>
                        <th style="min-width: 100px;">Last Action</th>
                        <th style="min-width: 130px;">Last Payment Date</th>
                        <th style="min-width: 140px;">Last Payment Amount</th>
                        <th style="min-width: 150px;">Last Payment Desc</th>
                        <th style="min-width: 100px;">Collected</th>
                        <th style="min-width: 110px;">Date Ordered</th>
                        <th style="min-width: 110px;">BP Applied</th>
                        <th style="min-width: 100px;">BP Issued</th>
                        <th style="min-width: 120px;">Date Completed</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (customers && customers.length > 0) { %>
                        <% customers.forEach(customer => { %>
                            <tr>
                                <td>
                                    <form method="post" action="/updateCustomer/<%= customer.id %>" style="display: inline;">
                                        <button class="btn btn-sm btn-outline-secondary" type="submit" name="action" value="view" title="Edit Customer">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                    </form>
                                </td>
                                <td><%= customer.job_no || '-' %></td>
                                <td><strong><%= customer.full_name %></strong></td>
                                <td>
                                    <span class="badge badge-light text-dark border">
                                        <%= customer.current_status || 'Unknown' %>
                                    </span>
                                </td>
                                <td>
                                    <small><%= customer.next_action_description || '-' %></small>
                                </td>
                                <td>
                                    <small>
                                        <%= customer.date_last_actioned || '-' %>
                                    </small>
                                </td>
                                <td>
                                    <%= customer.last_payment_date || '-' %>
                                </td>
                                <td>
                                    <% if (customer.last_payment_amount) { %>
                                        $<%= parseFloat(customer.last_payment_amount).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                                    <% } else { %>
                                        -
                                    <% } %>
                                </td>
                                <td>
                                    <small><%= customer.last_payment_description || '-' %></small>
                                </td>
                                <td>
                                    <% if (customer.invoices_collected) { %>
                                        $<%= parseFloat(customer.invoices_collected).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                                    <% } else { %>
                                        -
                                    <% } %>
                                </td>
                                <td>
                                    <%= customer.date_ordered || '-' %>
                                </td>
                                <td>
                                    <%= customer.date_bp_applied || '-' %>
                                </td>
                                <td>
                                    <%= customer.date_bp_issued || '-' %>
                                </td>
                                <td>
                                    <%= customer.date_completed || '-' %>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="14" class="text-center">No customers found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
